{
  LinearLayout;
  layout_width="-1";
  orientation="horizontal";
  BackgroundColor=backgroundc;
  {
    MaterialCardView;
    layout_gravity="center";
    layout_height="-2";
    Elevation="0";
    layout_width="-1";
    layout_margin="16dp";
    layout_marginTop="8dp";
    layout_marginBottom="8dp";
    radius=cardradius;
    CardBackgroundColor=cardedge;
    StrokeColor=cardedge;
    StrokeWidth=dp2px(1),
    id="card",
    {
      LinearLayout;
      layout_height="fill";
      id="background";
      layout_width="fill";
      {
        LinearLayout;
        orientation="horizontal";
        padding="24dp";
        paddingTop="18dp";
        paddingBottom="18dp";
        {
          TextView;
          id="isfollow";
          textSize="0sp";
        };
        {
          LinearLayout;
          orientation="vertical";
          {
            LinearLayout;
            orientation="horizontal";
            {
              CircleImageView;
              layout_width="20dp",
              layout_height="20dp",
              id="图像",
            };
            {
              TextView;
              id="活动";
              layout_marginLeft="6dp",
              textColor=textc;
              layout_gravity="center_vertical",
              Typeface=字体("product");
              textSize="15sp";
            };
          };
          {
            TextView;
            textColor=textc;
            letterSpacing="0.02";
            layout_marginTop="8dp";
            Typeface=字体("product-Bold");
            id="标题";
            textSize=标题文字大小;
            lineHeight=标题行高;
          };
          {
            TextView;
            textColor=textc;
            MaxLines=3;
            letterSpacing="0.02";
            ellipsize="end",
            layout_marginTop="8dp";
            Typeface=字体("product");
            id="预览内容";
            textSize=内容文字大小;
            lineHeight=内容行高;
          };
          {
            LinearLayout;
            layout_marginTop="8dp";
            orientation="horizontal";
            {
              TextView;
              textColor=textc;
              Typeface=字体("product-Medium");
              id="底部内容";
              textSize=内容文字大小;
              lineHeight=内容行高;
            };
          };
        };
      };
    };
  };
};